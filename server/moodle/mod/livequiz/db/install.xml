<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/livequiz/db" VERSION="20230804" COMMENT="XMLDB file for Moodle mod/livequiz"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  // This file keeps track of the database schema for the livequiz module.
  // FOR DATABASE GROUP: THIS IS ONLY AN EXAMPLE TABLE THIS IS WHERE YOU DEFINE THE TABLES THAT YOUR PLUGIN NEEDS
  // SO YOU NEED TO REPLACE THIS WITH YOUR OWN TABLES
  <TABLES>
    <TABLE NAME="livequiz" COMMENT="The settings for each live quiz.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Standard Moodle primary key."/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Name of the live quiz." SEQUENCE="false"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" COMMENT="Introduction text for the live quiz." SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" COMMENT="Format of the introduction text." SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Timestamp when the record was created." SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Timestamp when the record was last modified." SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>