{{!
    @template mod_livequiz/question_section

    Question section for the livequiz plugin

    Classes required for JS:
    * none

    Context variables required for this template:
    * fill in later

    Example context (json):
    * fill in later

}}
<div class="main-content-runner">
    <div class="question-container">
    <div class="moodle-box">
        <p class="question-title">{{questiontitle}}</p>
        <p class="question-description">{{questiondescription}}</p>
        <div class="answer-container">
            <fieldset>
                {{#answers}}
                    <div id="{{answerid}}" class="answer
                            {{^isattempting}}
                                {{#chosen}}
                                    {{#correct}}correct{{/correct}}
                                    {{^correct}}incorrect{{/correct}}
                                {{/chosen}}
                                {{^chosen}}
                                    {{#correctnotchosen}}correctnotchosen{{/correctnotchosen}}
                                {{/chosen}}
                            {{/isattempting}}">
                        <input type="{{questiontype}}" id="{{answerid}}" name="answers_for_question_{{questionid}}[]" value="{{answerid}}" class="{{quizid}}"
                            {{#chosen}}checked{{/chosen}}
                            {{^isattempting}}disabled{{/isattempting}}>
                        <label for="{{answerid}}">{{answerdescription}}</label>
                    </div>
                {{/answers}}
            </fieldset>
        </div>
        {{^isattempting}}
            <p class="question-explanation">{{questionexplanation}}</p>
        {{/isattempting}}
    </div>
</div>
</div>
