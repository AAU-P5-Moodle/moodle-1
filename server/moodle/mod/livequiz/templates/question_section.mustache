{{!
    @template mod_livequiz/question_section

    Question section for the livequiz plugin

    Classes required for JS:
    * none

    Context variables required for this template:
    * fill in later

    Example context (json):
    * fill in later

}}
{{#is_attempting}}
<div class="question-container">
    <form method="post" action="submit_answers.php">
  <div class="title-container">
    <h1 class="quiz-title">{{quiztitle}}</h1>
  </div>
  <div class="question-container">
      <p class="question-title">{{questiontitle}}</p>
      <div class="media-container">
          <img src="" alt="">
      </div>
    <p class="question-description">{{description}}</p>
  </div>
  <div class="answer-container">
  <fieldset>
  {{#answers}}
    <div class="answer">
      <label for="{{id}}">{{answer_description}}</label>
      <input type="{{answertype}}" id="{{id}}" name="answers_for_question_{{questionid}}[]" value="{{id}}"
        {{^is_attempting}} disabled {{/is_attempting}} />
    </div>
  {{/answers}}
  </fieldset>
  </div>
        <input type="hidden" name="quizid" value="{{quizid}}" />
        <input type="hidden" name="questionid" value="{{questionid}}" />
        <input type="hidden" name="questiontitle" value="{{questiontitle}}" />
        <input type="hidden" name="numberofquestions" value="{{numberofquestions}}" />
        <input type="submit" value="Submit question">
</form>
  <button class="check-answer">Check answer</button>
  {{/is_attempting}}
  {{^is_attempting}}
  {{/is_attempting}}
</div>


