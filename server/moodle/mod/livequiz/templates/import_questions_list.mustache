{{!
    @template mod_livequiz/import_questions_list

    Element for the list of questions to be imported

    Classes required for JS:
    * none

    Context variables required for this template:
    * fill in later

    Example context (json):
    * fill in later

}}

<div class="quiz_entry">
    <input
        type="checkbox"
        value="{{quizid}}"
        id="{{quizid}}"
        class="quiz_{{quizid}}"
        name="{{quiztitle}}"
    />
    <label for="{{quizid}}" class="quiz_label">{{quiztitle}}</label>
    <div id="questionsdiv">
        {{#questions}}
        <div class="question_entry question_entry_{{quizid}}">
            <input
                type="checkbox"
                value="question_{{questionid}}"
                id="{{questionid}}"
                class="quiz_{{quizid}}_question question_checkbox"
                name="{{questiontitle}}"
            />
            <label for="question_{{questionid}}" class="question_label">{{questiontitle}}</label>
        </div>
        {{/questions}}
    </div>
</div>
