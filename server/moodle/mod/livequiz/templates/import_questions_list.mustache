{{!
    @template mod_livequiz/import_questions_list

    Element for the list of questions to be imported

    Classes required for JS:
    * none

    Context variables required for this template:
    * fill in later

    Example context (json):
    * fill in later

}}

<div style="border: 2px solid black">
    <input
        type="checkbox"
        value="{{quizid}}"
        id="{{quizid}}"
        class="quiz_{{quizid}}"
        name="{{quiztitle}}"
        style="margin-right: 5px"
    />
    <label for="quiz_{{quizid}}" style="font-weight: bold">{{quiztitle}}</label>
    <div id="questionsdiv" style="margin-bottom: 20px; margin-left: 20px">
        {{#questions}}
        <div>
            <input
                type="checkbox"
                value="question_{{questionid}}"
                id="{{questionid}}"
                class="quiz_{{quizid}}_question question"
                name="{{questiontitle}}"
                style="margin-right: 5px"
            />
            <label for="question_{{questionid}}">{{questiontitle}}</label>
        </div>
        {{/questions}}
    </div>
</div>
