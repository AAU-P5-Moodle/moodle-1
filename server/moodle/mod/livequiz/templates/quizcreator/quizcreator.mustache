<div id="page-mod-livequiz-quizcreator">
    <h1>{{#quizdata}}{{title}}{{/quizdata}}</h1>
    <div id="form-container">
        {{{form_html}}}
    </div>

    <div id="saved-questions-container" style="border-radius: 10px; padding: 15px; background-color: #f9f9f9;">
        <h3>{{#quizdata}} {{#questions}} Saved Questions: {{/questions}}{{/quizdata}}</h3>
        <ol id="saved_questions_list" style="padding-left: 20px; margin: 0;">
            {{{saved_questions_html}}}
        </ol>
    </div>

    <div id="file-picker-container">
        {{{file_picker_html}}}
    </div>

    <div id="quiz-modal-buttons">
        <button id="saveQuiz" class="save_button">{{#str}}savequiz{{/str}}</button>
        <button id="cancelQuiz" class="cancel_button">{{#str}}cancelquiz{{/str}}</button>
    </div>

    {{#scripts}}
        <script src="{{.}}"></script>
    {{/scripts}}
</div>
