<div class="Modal_div">
    <h3>Title</h3>
    <textarea
    placeholder="Enter title (ex. Geography 1)"
    class="question_input_large"
    id="question_title_id"
  ></textarea>
    <h3>Question Text</h3>
    <textarea
          placeholder="Enter question (ex. What is the capital of Sweden?)"
          class="question_input_large"
          id="question_description_id"
  ></textarea>
    <h3>Explanation</h3>
    <textarea
            placeholder="Enter question explanation (ex. Stockholm is the capital of Sweden)"
            class="question_input_large"
            id="question_explanation_id"
    ></textarea>
  <div class="file_upload_section">
    <label for="file_input" class="file_upload_section"
      >+ Add video or image</label
    ><input
      class="file_picker_input"
      type="file"
      accept="image/*,video/*"
      id="file_input"
    /><img />
  </div>
  <button class="add_new_answer_to_question">Add Answer</button>
  <div class="all_answers_for_question_div"></div>
  <button class="save_button">Save Question</button>
  <button class="discard_question_button">Discard</button>
</div>

