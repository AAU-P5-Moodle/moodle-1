<div id="questionModal" class="modal">
    <div class="modal-content">
        <h2>{{QuestionModal}}</h2>
 
        {{! Question Description Text Area}}
        <div class="form-group">
            <label for="questionDescription">{{questionDescriptionLabel}}</label>
            <textarea id="questionDescription" placeholder="{{questionDescriptionPlaceholder}}" class="question_input_large">{{questionDescription}}</textarea>
        </div>
 
        {{! File Upload Section}}
        <div class="file_upload_section">
            <label for="fileInput" class="custom-file-upload">{{fileUploadLabel}}</label>
            <input id="fileInput" type="file" accept="image/*,video/*">
            <img id="filePreview" class="preview_image" alt="{{filePreviewAlt}}">
        </div>
 
        {{! Timer Setting Section}}
        <div class="form-group timer">
            <label for="timeLimit">{{timeLimitLabel}}</label>
            <input type="checkbox" id="enableTimeLimit" class="time_limit_checkbox">
            <input type="number" id="timeLimit" class="set_timer_input" placeholder="0 sec" disabled>
        </div>
 
        {{! Answer Options Section}}
        <div id="answerOptions" class="answers-section">
            <button id="addAnswerButton" class="add_new_answer_to_question">{{addAnswerLabel}}</button>
        </div>
 
        {{! Control Buttons}}
        <div class="button_container">
        <button id="saveQuestionButton" class="save_button">{{saveQuestionLabel}}</button>
        <button id="cancelQuestionButton" class="cancel_button">{{cancelQuestionLabel}}</button>
    </div>
</div>
</div>
 